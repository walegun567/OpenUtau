<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:vm="using:OpenUtau.App.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="600"
        x:Class="OpenUtau.App.Views.SingersDialog"
        Title="{DynamicResource singers.caption}" Width="500" Height="600">
  <Window.Styles>
    <Style>
      <Style.Resources>
      </Style.Resources>
    </Style>
  </Window.Styles>
  <Window.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source='/Strings/Strings.axaml'/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Window.Resources>
  <Design.DataContext>
    <vm:SingersViewModel/>
  </Design.DataContext>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="170"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Image Grid.Row="0" Width="120" Height="120" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Source="{Binding Avatar}"/>
    <Button Grid.Row="0" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="20" Width="120" Content="Location"
            IsEnabled="{Binding Singer, Converter={x:Static ObjectConverters.IsNotNull}}" Command="{Binding OpenLocation}"/>
    <ComboBox Grid.Row="0" x:Name="name" HorizontalAlignment="Stretch" Margin="140,10,10,10" VerticalAlignment="Top"
              Items="{Binding Singers}" SelectedItem="{Binding Singer}"/>
    <ScrollViewer Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="140,10,10,10" Height="118">
      <TextBlock x:Name="info" TextWrapping="Wrap" Text="{Binding Info}"/>
    </ScrollViewer>
    <DataGrid Grid.Row="1" Margin="10,0,10,10" Items="{Binding Otos}" IsReadOnly="True">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Alias" Binding="{Binding Alias}"/>
        <DataGridTextColumn Header="Set" Binding="{Binding Set}"/>
        <DataGridTextColumn Header="File" Binding="{Binding DisplayFile}"/>
        <DataGridTextColumn Header="Offset" Binding="{Binding Offset}"/>
        <DataGridTextColumn Header="Consonant" Binding="{Binding Consonant}"/>
        <DataGridTextColumn Header="Cutoff" Binding="{Binding Cutoff}"/>
        <DataGridTextColumn Header="Preutter" Binding="{Binding Preutter}"/>
        <DataGridTextColumn Header="Overlap" Binding="{Binding Overlap}"/>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</Window>
