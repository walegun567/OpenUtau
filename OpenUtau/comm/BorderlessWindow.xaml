<Window x:Class="OpenUtau.comm.BorderlessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BorderlessWindow" Height="300" Width="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        BorderThickness="0"
        ResizeMode="CanResize">
    <Grid>
        <Border x:Name="canvasBorder" BorderThickness="0"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Margin="20,20,20,20" Background="White">
            <Border.Effect>
                <DropShadowEffect x:Name ="canvasBorderDropShadow" BlurRadius="15" Color="Black" Opacity="0.8" ShadowDepth="0.8"/>
            </Border.Effect>
            <Grid x:Name="mainGrid">
                
            </Grid>
        </Border>
    </Grid>
</Window>
