<UserControl x:Class="OpenUtau.UI.Controls.NoteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="128" Background="Transparent" IsHitTestVisible="True" SizeChanged="UserControl_SizeChanged">
    <Canvas Name="bodyCanvas" Margin="0">
        <Rectangle Name="bodyRectangle" Height="{Binding ElementName=bodyCanvas, Path=ActualHeight}" Width="{Binding ElementName=bodyCanvas, Path=ActualWidth}" 
                   Canvas.Top="0" Canvas.Left="0" RadiusX="2" RadiusY="2" Fill="Gray" Opacity="1" Stroke="DimGray" StrokeThickness="1"/>
        <Border Height="{Binding ElementName=bodyCanvas, Path=ActualHeight}" Canvas.Top="0" Canvas.Left="0" >
            <TextBlock Name="lyricText" Text="a" Foreground="White" VerticalAlignment="Center" Margin="5,-3,0,0"/>
        </Border>
    </Canvas>
</UserControl>
